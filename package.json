{
  "name": "create-o3-app",
  "version": "1.0.0",
  "description": "CLI tool to scaffold OpenMRS 3 frontend modules",
  "type": "module",
  "bin": {
    "create-o3-app": "./dist/cli/index.js"
  },
  "main": "./dist/cli/index.js",
  "types": "./dist/cli/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "openmrs",
    "o3",
    "cli",
    "scaffold",
    "generator",
    "microfrontends"
  ],
  "author": "OpenMRS",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmrs/create-o3-app.git"
  },
  "bugs": {
    "url": "https://github.com/openmrs/create-o3-app/issues"
  },
  "homepage": "https://github.com/openmrs/create-o3-app#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "detect-package-manager": "^2.0.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "globby": "^13.2.2",
    "handlebars": "^4.7.8",
    "listr2": "^6.0.1",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "simple-git": "^3.20.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
