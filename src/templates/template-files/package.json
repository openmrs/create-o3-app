{
  "name": "{{packageName}}",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "description": "{{description}}",
  "browser": "dist/openmrs-esm-{{kebabCase projectName}}.js",
  "main": "src/index.ts",
  "source": true,
  "scripts": {
    "start": "openmrs develop",
    "build": "{{buildTool}} --mode production",
    "build:development": "{{buildTool}} --mode development",
    "analyze": "{{buildTool}} --mode=production --env.analyze=true",
    "serve": "{{buildTool}} serve --mode=development",
    "test": "cross-env TZ=UTC jest --config jest.config.js --verbose false --passWithNoTests --color",
    "test:watch": "cross-env TZ=UTC jest --watch --config jest.config.js --color",
    "coverage": "yarn test --coverage --passWithNoTests",
    "typescript": "tsc",
    "lint": "eslint src --ext ts,tsx",
    "extract-translations": "i18next 'src/**/*.component.tsx' 'src/**/*.extension.tsx' 'src/**/*.modal.tsx' 'src/index.ts' --config ./tools/i18next-parser.config.js",
    "prettier": "prettier --config prettier.config.js --write \"src/**/*.{ts,tsx,css,scss}\"",
    "postinstall": "husky install"
  },
  "keywords": [
    "openmrs",
    "microfrontends"
  ],
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmrs/openmrs-esm-core.git"
  },
  "bugs": {
    "url": "https://github.com/openmrs/openmrs-esm-core/issues"
  },
  "homepage": "https://github.com/openmrs/openmrs-esm-core#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@carbon/react": "^1.83.0"
  },
  "peerDependencies": {
    "@carbon/react": "1.x",
    "@openmrs/esm-framework": "*",
    "react": "18.x",
    "react-dom": "18.x",
    "react-i18next": "16.x",
    "react-router-dom": "6.x",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@openmrs/esm-framework": "{{#if isMonorepo}}workspace:*{{else}}*{{/if}}",
    "{{#if_eq buildTool 'webpack'}}@openmrs/webpack-config{{else}}@openmrs/rspack-config{{/if_eq}}": "{{#if isMonorepo}}workspace:*{{else}}*{{/if}}",
    "@testing-library/jest-dom": "^6.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "i18next-parser": "^9.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-i18next": "^16.0.0",
    "react-router-dom": "^6.3.0",
    "rxjs": "^6.5.3",
    "{{#if_eq buildTool 'webpack'}}webpack{{else}}@rspack/cli{{/if_eq}}": "^5.99.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix --max-warnings 0",
    "*.{css,scss,ts,tsx}": "prettier --write --list-different"
  },
  "packageManager": "yarn@4.10.3"
}
