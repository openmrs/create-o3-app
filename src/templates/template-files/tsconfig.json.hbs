{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "es2020",
      "es2022",
      "esnext"
    ],
    "noEmit": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "__mocks__": ["./__mocks__"],
{{#if pathAliases}}
{{#each pathAliases}}
      "@{{this}}/*": ["./src/{{this}}/*"]{{#unless @last}},{{/unless}}
{{/each}}
{{else}}
      "@hooks/*": ["./src/hooks/*"],
      "@resources/*": ["./src/resources/*"],
      "@utils/*": ["./src/utils/*"]
{{/if}},
      "@tools/*": ["./tools/*"],
      "@constants": ["./src/constants"],
      "@openmrs/*": ["./node_modules/@openmrs/*"]
    }
  },
  "include": ["src/**/*"],
  "types": ["@testing-library/jest-dom", "lodash", "react", "react-dom"]
}

